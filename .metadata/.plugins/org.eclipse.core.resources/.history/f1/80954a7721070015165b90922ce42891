package cosas;

public class metodos {

	public static void replaceR(String l1, String l2, String opci) 
	{
		if (!opci.equals("")) 
		{
			cosas.frm.pila = cosas.frm.pila.charAt(0) + l1 + l2 + opci;
		} 
		else if (l2.equals("")) 
		{
			cosas.frm.pila = cosas.frm.pila.substring(0, cosas.frm.pila.length() - 1) + l1;
		}
		else 
		{
			cosas.frm.pila = cosas.frm.pila.substring(0, cosas.frm.pila.length() - 1) + l1 + l2;
		}
		cosas.frm.k--;
		
		//System.out.println(cosas.frm.pila);
	}

	public static void replaceA(String l1, String l2) 
	{
		cosas.frm.pila = cosas.frm.pila.substring(0, cosas.frm.pila.length() - 1) + l1 + l2;
		//System.out.println(cosas.frm.pila);
	}

	public static void desapileR() 
	{
		cosas.frm.pila = cosas.frm.pila.substring(0, cosas.frm.pila.length() - 1);
		cosas.frm.k--;
		//System.out.println(cosas.frm.pila);
	}

	public static void desapileA() 
	{
		cosas.frm.pila = cosas.frm.pila.substring(0, cosas.frm.pila.length() - 1);
		//System.out.println(cosas.frm.pila);
	}

	public static void error(String cadena) 
	{
		System.out.println(cadena + " = Rechazo");
	}

	public static void aceptacion(String cadena) 
	{
		System.out.println(cadena + " = Aceptacion");
	}
}
